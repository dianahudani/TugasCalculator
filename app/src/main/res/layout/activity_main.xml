<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#424242">

    <TextView
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:gravity="center|right|bottom"
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:gravity="center|right|top"
        android:id="@+id/calculatorScreen"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="del"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="รท"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:background="#424242"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/multiplication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ร"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/subtraction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:background="#424242"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/comma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/n0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="25dp" />

        <Button
            android:background="#424242"
            android:textColor="#FFFFFF"
            android:id="@+id/addition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="25dp" />

    </LinearLayout>

</LinearLayout>